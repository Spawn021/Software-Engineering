<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.LogInController">
   <children>
      <Circle fill="#19a2d0" layoutX="480.0" layoutY="102.0" radius="66.0" stroke="WHITE" strokeType="INSIDE" />
      <ImageView fitHeight="205.0" fitWidth="205.0" layoutX="378.0">
         <image>
            <Image url="@../resources/Logo/Round/HUST%20Milk%20Tea-logos_white.png" />
         </image>
      </ImageView>
      <VBox layoutX="380.0" layoutY="239.0" prefHeight="261.0" prefWidth="201.0" style="-fx-background-color: #FAFAFA; -fx-fill-width: true; -fx-border-style: solid;" styleClass="border" stylesheets="@../Stylesheet.css">
         <children>
            <Label text="Username or Email">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField id="username" fx:id="username" onAction="#onEnter" promptText="Tên đăng nhập">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField id="password" fx:id="password" onAction="#onEnter" promptText="Mật khẩu">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </PasswordField>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#loginPressedBtn" prefHeight="41.0" prefWidth="208.0" style="-fx-background-color: #19a2d0; -fx-border-style: solid;" styleClass="border" text="Đăng nhập" textFill="WHITE">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#forgetPasswordButton" prefHeight="43.0" prefWidth="204.0" style="-fx-background-color: #19a2d0; -fx-border-style: solid;" styleClass="border" text="Quên mật khẩu" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <Label layoutX="225.0" layoutY="192.0" text="Chào mừng bạn đến với hệ thống quản lý trà sữa HUST Milk Tea">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
